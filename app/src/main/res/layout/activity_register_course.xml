<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E232C"
    tools:context=".register_course">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="62dp"
            android:id="@+id/account_image"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_account_circle_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Course Information"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:id="@+id/selectCourse"/>

       </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="80dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:columnCount="1"
            android:rowCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="14dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:id="@+id/c1"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:elevation="6dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/gradient1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="30sp"
                            android:text="Business"
                            android:id="@+id/courseName"
                            android:background="@drawable/rounded_corner"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFC300"/>

                        <!-- Course Fee -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="110dp"
                            android:gravity="center"
                            android:text="Course Fee :"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="118dp"
                            android:layout_marginTop="110dp"
                            android:text="LKR 50,000"
                            android:id="@+id/fee"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <!-- Course Branches -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="140dp"
                            android:gravity="center"
                            android:text="Branches :"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="140dp"
                            android:layout_marginLeft="103dp"
                            android:id="@+id/branches"
                            android:gravity="center"
                            android:text="Colombo and Kandy"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <!-- Course Duration -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="170dp"
                            android:gravity="center"
                            android:text="Participants :"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/maxpp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="170dp"
                            android:layout_marginLeft="115dp"
                            android:gravity="center"
                            android:text="10 days"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <!-- Course Starting on -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="200dp"
                            android:gravity="center"
                            android:text="Starting on :"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="200dp"
                            android:layout_marginLeft="110dp"
                            android:gravity="center"
                            android:text="15 March 2024"
                            android:id="@+id/startingDate"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <!-- Course Published on -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="230dp"
                            android:gravity="center"
                            android:text="Description :"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="117dp"
                            android:id="@+id/description"
                            android:layout_marginTop="230dp"
                            android:gravity="center"
                            android:text="15 March 2024"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <!-- Course Registration Closing date -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="260dp"
                            android:gravity="center"
                            android:text="Registration closing date :"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="220dp"
                            android:layout_marginTop="260dp"
                            android:gravity="center"
                            android:id="@+id/endingDate"
                            android:text="15 July 2024"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <Button
                            android:layout_width="170dp"
                            android:id="@+id/registerCourse"
                            android:layout_height="65dp"
                            android:text="Register Now"
                            android:textStyle="bold"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="310dp"
                            android:layout_marginBottom="5dp"/>

                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>