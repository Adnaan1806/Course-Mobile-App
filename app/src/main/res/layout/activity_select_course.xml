<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E232C"
    tools:context=".selectCourse">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="20dp"
      android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp">

      <ImageView
        android:layout_width="62dp"
        android:id="@+id/account_image"
        android:layout_height="62dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/baseline_account_circle_24"/>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Course"
        android:textColor="@color/white"
          android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/selectCourse"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="20 Courses Available"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:layout_below="@+id/selectCourse"
          android:id="@+id/cAvailable"/>

      <EditText
          android:layout_width="250dp"
          android:layout_height="40dp"
          android:layout_below="@+id/cAvailable"
          android:layout_marginTop="15dp"
          android:padding="10dp"
          android:hint="Search course"
          android:drawableEnd="@drawable/baseline_search_24"
          android:background="@drawable/edit_text_border"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp">

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c1"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Business"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c2"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Software Engineering"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c3"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Marketing"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c4"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Tourism"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c5"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Accounting"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c6"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Fashion Design"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c7"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Architecture"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:id="@+id/c8"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:elevation="6dp"
          app:cardElevation="60dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient1">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/baseline_stars_24"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="Law"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginTop="3dp"/>

        </LinearLayout>

      </androidx.cardview.widget.CardView>


    </GridLayout>


  </LinearLayout>



  </ScrollView>